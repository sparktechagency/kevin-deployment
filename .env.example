#--------------------------------------------------------------------------
# Application Environment
#--------------------------------------------------------------------------
APP_NAME="Your App Name"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:81

LOG_CHANNEL=stack
LOG_LEVEL=debug
#LOG_LEVEL=info # Use this in production

#--------------------------------------------------------------------------
# Database Configuration
#--------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=boilerplate-db
DB_PORT=3306
DB_DATABASE=boilerplate_db
DB_USERNAME=user
DB_PASSWORD=password

# This is for the MySQL container setup
MYSQL_ROOT_PASSWORD=root_password

#--------------------------------------------------------------------------
# Caching, Queue, Broadcasting & Session
#--------------------------------------------------------------------------
# We are using Redis for powerful caching and broadcasting
CACHE_STORE=redis
QUEUE_CONNECTION=database # Can be changed to 'redis' for better performance
BROADCAST_CONNECTION=reverb
SESSION_DRIVER=database

#--------------------------------------------------------------------------
# Redis Configuration
#--------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=boilerplate-redis
REDIS_PASSWORD=null
REDIS_PORT=6379

#--------------------------------------------------------------------------
# Laravel Reverb (Real-time WebSocket Server)
#--------------------------------------------------------------------------
REVERB_APP_ID=100001 # its could be any number
REVERB_APP_KEY= any_random_key_here
REVERB_APP_SECRET= any_random_secret_here
REVERB_HOST=localhost # it will be docker service name 
REVERB_PORT=8080 # Must match the port in docker-compose.yml
REVERB_SCHEME=http

# For Frontend (e.g., Laravel Echo)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

VITE_HMR_HOST="localhost"

#--------------------------------------------------------------------------
# Mail Configuration (Using Mailpit for local development)
#--------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

#--------------------------------------------------------------------------
# Spatie Activity Log Configuration
#--------------------------------------------------------------------------
# Set a queue name to process activity logs in the background for better performance.
ACTIVITY_LOGGER_QUEUE=default

#--------------------------------------------------------------------------
# Firebase Push Notifications
#--------------------------------------------------------------------------
# Path to your Firebase service account JSON file inside the 'backend' directory.
FIREBASE_CREDENTIALS=firebase-credentials.json

#--------------------------------------------------------------------------
# Laravel Cashier (Stripe) Configuration
#--------------------------------------------------------------------------
STRIPE_KEY=pk_test_...
STRIPE_SECRET=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

#--------------------------------------------------------------------------
# Docker Compose Port Forwarding (For local development reference)
#--------------------------------------------------------------------------
FORWARD_DB_PORT=3309
FORWARD_REDIS_PORT=6380
FORWARD_REVERB_PORT=8081
FORWARD_MAILPIT_PORT=8025
FORWARD_NGINX_PORT=81
FORWARD_PHPMYADMIN_PORT=8080
